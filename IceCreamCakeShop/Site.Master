<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Site.master.cs" Inherits="IceCreamCakeShop.SiteMaster" %>

<!DOCTYPE html>

<html lang="zh">
<head runat="server">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>后台管理系统</title>

    <asp:PlaceHolder runat="server">
    </asp:PlaceHolder>
    <style>
        .MainPage{
            width:100%;
            height:960px;
        }
        .TopMain{
            width:100%;
            height:150px;
            background-color:deepskyblue;
            border-style:solid;
            border-color:yellow;
        }
        .TopMessage{
            width:100%;
            height:22px;
            background-color:deepskyblue;
        }
        .Logo{
            width:100%;
            height:128px;
        }
        .LeftTreeView{
            width:12%;height:810px;
            background-color:lightpink;
            float:left;
            border-style:solid;
            border-color:yellow;
        }
        .PlaceHolder{
            float:right;width:87.3%;
            height:830px;
            background-color:antiquewhite;
            border-style:solid;
            border-color:yellow;
        }
        </style>
</head>
<body>
    <form runat="server">
        <div id="MainPage" class="MainPage">
            <div id="TopMain" class="TopMain">
                <div id="TopMessage" class="TopMessage">
                    <p>额外工具栏</p>
                </div>
                <div id="Logo" class="Logo">
                    <p">这里以后是LOGO的图片</p>
                </div>
            </div>
            <div id="LeftTreeView" class="LeftTreeView">
                <div id="TreeView" class="TreeView">

                    <asp:TreeView ID="TreeView1" runat="server" DataSourceID="SiteMapDataSource1">
                    </asp:TreeView>
                    <asp:SiteMapDataSource ID="SiteMapDataSource1" runat="server" />

                </div>
            </div>
            <div id="PlaceHolder" class="PlaceHolder">
            <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
            </asp:ContentPlaceHolder>
                <asp:ContentPlaceHolder ID="MainContent" runat="server">
            </asp:ContentPlaceHolder>
            </div>
        </div>
    </form>
</body>
</html>
        
